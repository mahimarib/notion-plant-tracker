{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",

    "compilerOptions": {
        "lib": ["es2020"],
        "module": "ES2020",
        "target": "ES2020",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*.ts", "./.env"]
}
