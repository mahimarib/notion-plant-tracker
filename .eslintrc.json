{
    "env": {
        "node": true,
        "commonjs": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": [
            "warn",
            "single",
            { "avoidEscape": true, "allowTemplateLiterals": true }
        ],
        "semi": ["warn", "always"],
        "no-process-env": "off",
        "arrow-parens": ["warn", "as-needed"]
    },
    "extends": ["prettier"]
}
